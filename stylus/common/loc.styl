.pop-edit-loc .pop-main
    width 700px
    .section-search
        padding 10px
//search
.section-search   
    .tit
        font-size 18px
        .icon-dot
            display inline-block
            width 14px
            height 14px
            margin-right 12px
            border-radius 7px
            background #93d6e5
    .result
        float left
        width 66%
        margin-right 2%
        .tit
            margin-top 26px
            padding-left 32px
        .block
            margin-top 22px
            border 1px solid #bebebe
            background #f0f0f0
            .search
                position relative
                margin 24px 34px 39px
                padding-left 48px
                background #fff
                .icon-search
                    position absolute
                    top 11px
                    left 12px
                    width 26px
                    height 27px
                    bgImg(-406px, 0)
                .input
                    display block
                    width 100%
                    padding 14px 0 15px
                    border none
                .nav
                    position absolute
                    top 50px
                    left 0 
                    padding 9px 0
                    span, a
                        margin-right 5px
                    span
                        color #8d8d8d
            .list
                height 300px
                overflow-y auto
                background #fff
                .city
                    padding 18px 34px 18px 24px
                    border-left 10px solid transparent
                    border-bottom 1px solid #f0f0f0
                    .name
                        margin-right 20px
                        font-size 16px
                    .rec
                        color #8d8d8d
                    .icon-add
                        float right
                        width 35px
                        height 35px
                        margin-top -6px
                        cursor pointer
                        bgImg(-437px, 0)
                    &:hover
                        border-left-color #e95469
                        background #f0f0f0
                        .icon-add
                            border-radius 2px
                            background-position -469px 0
                            background-color #e95469
                .selected
                    .icon-add
                        display none
                    &:hover
                        border-left-color transparent
                        background transparent
                .loading
                    display none
                    height 100px
                    background url(i/loading.gif) center center no-repeat
    .select
        float left
        width 26%
        height 520px
        padding 0 3%
        border-top 10px solid #404a58
        background #f7f7f7
        .tit
            margin-top 16px
        .list
            height 300px
            overflow-y auto
            margin-top 22pxzz
            li
                padding 12px 0
                border-bottom 1px dashed #bebebe
                .icon-del
                    float right
                    width 18px
                    height 18px
                    margin-right 8px
                    text-align center
                    cursor pointer
                &:hover
                    color #e95469
                    .icon-del
                        border-radius 3px
                        background #e95469
                        color #fff
        .btn-view
            display block
            width 100%
            height 45px
            margin 20px auto 0
            border-radius 3px
            background #e95469
            color #fff
            font-size 16px
            line-height 45px
            text-align center